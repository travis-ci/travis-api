<% title "Organization - #{describe(@organization)}" %>

<div id="tabs">
  <span id="organization" class="tab-switch"></span>
  <a href="#organization" class="tab-link">Organization</a>
  <section class="tab-content two-columns">
    <%= render partial: 'organization' %>
  </section>

  <% if @subscription %>
    <span id="subscription" class="tab-switch"></span>
    <a href="#subscription" class="tab-link">Subscription</a>
    <section class="tab-content">
      <%= render partial: 'subscriptions/subscription' %>
      <%= render partial: 'subscriptions/invoices' %>
    </section>
  <% end %>

  <span id="members" class="tab-switch"></span>
  <a href="#members" class="tab-link">Members</a>
  <section class="tab-content">
    <%= render partial: 'members' %>
  </section>

  <span id="repositories" class="tab-switch"></span>
  <a href="#repositories" class="tab-link">Repositories</a>
  <section class="tab-content">
    <%= render partial: 'shared/repositories' %>
  </section>

  <span id="jobs" class="tab-switch"></span>
  <a href="#jobs" class="tab-link">Jobs</a>
  <section class="tab-content">
    <%= render partial: 'shared/jobs', locals: {owner: @organization} %>
  </section>

  <span id="requests" class="tab-switch"></span>
  <a href="#requests" class="tab-link">Requests</a>
  <section class="tab-content">
    <%= render partial: 'shared/requests', locals: {origin: @organization } %>
  </section>

  <span id="broadcasts" class="tab-switch"></span>
  <a href="#broadcasts" class="tab-link">Broadcasts</a>
  <section   class="tab-content">
    <%= render partial: 'shared/broadcasts', locals: {recipient: @organization} %>
  </section>
</div>
