<!DOCTYPE html>
<html>
  <head>
    <title>Admin | <%= yield(:title).empty? ? 'Travis CI Support' : yield(:title) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="top">
      <div class="row topbar">
        <h1 id="logo" class="logo">
          <%= link_to "Home", root_path %>
        </h1>
        <% unless action_name == 'logout' %>
          <%= form_tag(search_path, method: :get, id: "search") do %>
            <%= text_field_tag(:q, params[:q]) %>
            <%= button_to options = nil, class: "button", id: "search-submit" do %>
              <%= fa_icon("search") %>
            <% end %>
          <% end %>

          <nav>
            <ul class="navigation menu">
              <li><%= link_to fa_icon("question", title: "Search help"), help_path %></li>
              <li><%= link_to fa_icon("download", title: "CSV report"), reports_path %></li>
              <li><%= link_to fa_icon("bullhorn", title: "Broadcast"), broadcasts_path %></li>
              <li><%= link_to fa_icon("users", title: "Admin users"), admins_path %></li>
              <% if travis_config.enterprise? %>
                <li><%= link_to fa_icon("address-book", title: "Manage enterprise users"), enterprise_users_path %></li>
              <% end %>
              <% unless travis_config.enterprise? %>
                <li><%= link_to fa_icon("flag", title: "Features"), features_path %></li>
                <li><%= link_to fa_icon("ban", title: "Abuse"), offenders_path %></li>
              <% end %>
              <% if travis_config.keen? && travis_config.keen.project_id? %>
                <li><%= link_to fa_icon("bar-chart", title: "Stats"), stats_path %></li>
              <% end %>
              <li><%= link_to fa_icon("file-text-o", title: "Audit trail"), audit_trail_index_path, id: "audit_trail" %></li>
              <li><%= link_to fa_icon("chevron-circle-right", title: "Logout"), logout_path, id: "logout" %></li>
            </ul>
          </nav>
        <% end %>
      </div>
    </header>

    <main class="row main">
      <section class="flashes">
        <% flash.each do |name, msg| -%>
          <%= content_tag :p, msg, class: name %>
        <% end -%>
      </section>

      <p class="breadcrumbs"><%= yield(:breadcrumbs) %></p>
      <h1 class="info-header"><%= yield(:title) %></h1>

      <%= yield %>

    </main>
  </body>
</html>
