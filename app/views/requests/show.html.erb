<% title "Request - #{describe(@request)}" %>

<% breadcrumbs "#{link_to describe(@request.owner), @request.owner} > #{link_to @request.repository.name, @request.repository} > Request #{describe(@request)}" %>

<section class="info-block">
  <h2 class="info-header">Information</h2>

  <dl class="simple-info">
    <dt class="info-label">State:</dt>
    <dd><%= @request.state %></dd>

    <dt class="info-label">Result:</dt>
    <dd><%= @request.result %></dd>

    <dt class="info-label">Message:</dt>
    <dd><%= @request.message %></dd>

    <dt class="info-label">Repository:</dt>
    <dd><%= link_to describe(@request.repository), @request.repository %></dd>

    <dt class="info-label">Owner:</dt>
    <dd><%= link_to describe(@request.owner), @request.owner %></dd>

    <dt class="info-label">Event Type:</dt>
    <dd><%= @request.event_type %></dd>

    <dt class="info-label">Created:</dt>
    <dd><time><%= @request.created_at %></time></dd>

    <dt class="info-label">Started:</dt>
    <dd><time><%= @request.started_at %></time></dd>

    <dt class="info-label">Finished:</dt>
    <dd><time><%= @request.finished_at %></time></dd>
  </dl>
</section>

<section class="info-block">
  <h2 class="info-header">Payload</h2>

  <dl class="simple-info">
    <dt class="info-label">Ref:</dt>
    <dd><%= @request.payload['ref'] %></dd>

    <dt class="info-label">Compare:</dt>
    <dd><a href="<%= @request.payload['compare']%>">compare URL</a></dd>
  </dl>
</section>
