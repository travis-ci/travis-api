<h1 class="info-header"><%= "Build - #{@build.repository.slug} ##{@build.number}" %></h1>

<div id="tabs">
  <span id="build" class="tab-switch"></span>
  <a href="#build" class="tab-link">Information</a>
  <section class="tab-content">
    <%= render partial: 'build', locals: {build: @build} %>
  </section>

  <span id="config" class="tab-switch"></span>
  <a href="#config" class="tab-link">Configuration</a>
  <section class="tab-content">
    <%= render partial: 'shared/config', locals: {config: @build.config} %>
  </section>
</div>
