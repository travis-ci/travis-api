  <a href="#repository" class="tab-link">Repository</a>
  <section class="tab-content">
    <%= render partial: 'repository', locals: {repository: @repository} %>
  </section>

  <span id="users" class="tab-switch"></span>
  <a href="#users" class="tab-link">Users</a>
  <section class="tab-content">
