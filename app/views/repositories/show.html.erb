<% title "Repository - #{describe(@repository)}" %>

<div id="tabs">
  <span id="repository" class="tab-switch"></span>
  <a href="#repository" class="tab-link">Repository</a>
  <section class="tab-content">
    <%= render partial: 'repository' %>
  </section>

  <span id="builds" class="tab-switch"></span>
  <a href="#builds" class="tab-link">Builds</a>
  <section class="tab-content">
    <%= render partial: 'builds', locals: {repository: @repository, builds: @builds} %>
  </section>

  <span id="requests" class="tab-switch"></span>
  <a href="#requests" class="tab-link">Requests</a>
  <section class="tab-content">
    <%= render partial: 'requests' %>
  </section>

  <span id="broadcast" class="tab-switch"></span>
  <a href="#broadcast" class="tab-link">Broadcast</a>
  <section   class="tab-content">
    <%= render partial: 'shared/broadcasts', locals: {recipient: @repository} %>
  </section>
</div>
