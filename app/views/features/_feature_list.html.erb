<% if features.empty? %>
  <p>No known feature flags for <%= kind %>.</p>
<% else %>
  <ul>
    <% features.each do |feature| %>
      <li class="inline-list feature-for-item">
        <p><%= link_to format_feature(feature), feature_path(kind, feature) %></p>
        <p>
          <% if (count = Features.count(kind, feature)) && (count != 1) %>
            <%= "#{count} #{kind}" %>
          <% else %>
            <%= "#{count} #{kind.singularize}" %>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
<% end %>
