<section class="info-block">
  <h2>Broadcast to <%= describe(recipient) %></h2>
  <%= render partial: 'shared/broadcast_new', locals: {recipient: recipient} %>
</section>

<section class="info-block">
  <h2 class="info-header">Active</h2>
  <%= render partial: 'shared/broadcast_list', locals: {broadcasts: @active_broadcasts, recipient: recipient} %>
</section>

<section class="info-block">
  <h2 class="info-header">Expired</h2>
  <%= render partial: 'shared/broadcast_list', locals: {broadcasts: @inactive_broadcasts, recipient: recipient} %>
  <%= will_paginate @inactive_broadcasts, param_name: 'page', params: {controller: controller_name, action: 'broadcasts', id: params[:id], anchor: 'broadcasts', 'data-remote': true } %>
</section>
