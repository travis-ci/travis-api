<section class="info-block">
  <h2 class="info-header">Travis Information</h2>

  <dl class="simple-info">
    <dt class="info-label">Travis ID:</dt>
    <dd><%= owner.id %></dd>

    <dt class="info-label">Account Creation:</dt>
    <dd>
      <time>
        <%= owner.created_at %>
      </time>
    </dd>

    <dt class="info-label">Trial Builds:</dt>
    <dd>
      <form>
      </form>
    </dd>

    <dt class="info-label">Total Trials:</dt>
    <dd></dd>

    <dt class="info-label">Subscription:</dt>
    <dd>
      <% if owner.subscription && owner.subscription.valid_to > Time.now %>
        <%= link_to "#{format_subscription(owner.subscription)} (Active, expires #{owner.subscription.valid_to.to_date})", owner.subscription %>
      <% elsif owner.subscription && owner.subscription.valid_to < Time.now %>
        <%= link_to "#{format_subscription(owner.subscription)} (Cancelled, expired #{owner.subscription.valid_to.to_date})", owner.subscription %>
      <% else %>
        <p>None.</p>
      <% end %>
    </dd>

    <dt class="info-label">Job Boost:</dt>
    <dd>
      <form>
      </form>
    </dd>
  </dl>
</section>


