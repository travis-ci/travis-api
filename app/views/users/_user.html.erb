<section class="box">
  <h2 class="box-title">Basic Information</h2>

  <div class="detail-pair">
    <strong>Name</strong>
    <%= user.name %>
  </div>

  <div class="detail-pair">
    <strong>Primary E-mail Address</strong>
    <%= user.email %>
  </div>

  <div class="detail-pair">
    <strong>Additional E-Mail Addresses</strong>
    <% user.emails.each do |entry| %>
      <% if entry.email != user.email %>
        <div><%= entry.email %></div>
      <% end %>
    <% end %>
  </div>
</section>

<section class="box">
  <h2 class="box-title">GitHub Information</h2>
  <div class="detail-pair">
    <strong>GitHub Name</strong>
    <%= user.login %>
  </div>

  <div class="detail-pair">
    <strong>GitHub ID</strong>
    <%= user.github_id %>
  </div>

  <div class="detail-pair">
    <strong>Token</strong>
    <%= hidden(user, :github_oauth_token) %>
  </div>

  <div class="detail-pair">
    <strong>Scopes</strong>
    <% if user.github_scopes.present? %>
      <%= user.github_scopes %>
    <% else %>
      none
    <% end %>
  </div>

  <div class="detail-pair">
    <strong>Last Sync</strong>
    <%= user.synced_at ? user.synced_at : "never" %>
  </div>
</section>

<section class="box">
  <h2 class="box-title">Organizations</h2>

  <% if user.organizations.empty? %>
    <p>No organizations.</p>
  <% else %>
    <% user.organizations.each do |org| %>
      <div>
        <% if org.avatar_url %>
          <img class="avatar" src="<%= org.avatar_url %>?s=20">
        <% end %>
        <%= org.name.present? ? "#{org.name} (#{org.login})" : org.login %>
        <%= link_to "View", org %>
      </div>
    <% end %>
  <% end %>
</section>
