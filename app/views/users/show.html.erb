<% title describe(@user) %>

<div id="tabs">
  <%= link_to 'User', user_path(@user), class: "#{current_tab(user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <%= link_to 'Organizations', organizations_user_path(@user), class: "#{current_tab(organizations_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <%= link_to 'Repositories', repositories_user_path(@user), class: "#{current_tab(repositories_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <%= link_to 'Jobs', jobs_user_path(@user), class: "#{current_tab(jobs_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <%= link_to 'Requests', requests_user_path(@user), class: "#{current_tab(requests_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <%= link_to 'Broadcasts', broadcasts_user_path(@user), class: "#{current_tab(broadcasts_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <% unless travis_config.enterprise? %>
    <%= link_to 'Subscription', subscription_user_path(@user), class: "#{current_tab(subscription_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
    <%= link_to 'Invoices', invoices_user_path(@user), class: "#{current_tab(invoices_user_path)} remote-tab-link", remote: true, data: { content: 'main-content' } %>
  <% end %>
</div>

<section id="main-content">
  <%= render @render_args %>
</section>
