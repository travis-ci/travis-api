<h1 class="info-header"><%= "User - #{@user.name} (#{@user.login})" %></h1>

<div id="tabs">
  <span id="user" class="tab-switch"></span>
  <a href="#user" class="tab-link">User</a>
  <section class="tab-content">
    <%= render partial: 'user', locals: {user: @user} %>
  </section>

  <span id="account" class="tab-switch"></span>
  <a href="#account" class="tab-link">Account</a>
  <section class="tab-content">
    <%= render partial: 'shared/account', locals: {owner: @user} %>
  </section>

  <span id="repositories" class="tab-switch"></span>
  <a href="#repositories" class="tab-link">Repositories</a>
  <section class="tab-content">
    <%= render partial: 'shared/repositories', locals: {repositories: @repositories} %>
  </section>

  <span id="queue" class="tab-switch"></span>
  <a href="#queue" class="tab-link">Queue</a>
  <section   class="tab-content">
    <%= render partial: 'shared/queue' %>
  </section>
</div>
